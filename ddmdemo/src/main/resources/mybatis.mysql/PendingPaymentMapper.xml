<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huawei.dao.mapper.PendingPaymentMapper" >

    <resultMap id="BaseResultMap" type="com.huawei.projo.PendingPayment" >
        <id column="pending_payment_id" property="pendingPaymentId" jdbcType="BIGINT" />
        <result column="is_payed" property="isPayed" jdbcType="VARCHAR" />
        <result column="token" property="token" jdbcType="VARCHAR" />
        <result column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
        <result column="goods_name" property="goodsName" jdbcType="VARCHAR" />
        <result column="goods_price" property="goodsPrice" jdbcType="INTEGER" />
        <result column="goods_picture_path" property="goodsPicturePath" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="batchAdd" parameterType="java.util.List">
        insert into pending_payment (user_id,goods_id,token)values
        <foreach collection="pendingPaymentList" item="item" index="index" separator=",">
            (#{item.userId,jdbcType=BIGINT},#{item.goodsId,jdbcType=BIGINT},#{item.token,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <select id="queryPendingPayment" resultType="com.huawei.projo.PendingPayment" parameterType="long"  resultMap="BaseResultMap">
    select pending_payment_id,user_id,goods.goods_id,goods_name,goods_price,goods_picture_path from pending_payment,goods where user_id=#{userId} and pending_payment.goods_id=goods.goods_id and is_payed=false order by pending_payment_id desc
  </select>

</mapper>